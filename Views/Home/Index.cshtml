@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenue sur la WebApp Avanteam</h1>
    @if (!SignInManager.IsSignedIn(User))
    {
        <div id="btn-home">
        <button class="btn btn-primary btn-lg">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">S'enregistrer</a>
        </button>
        <button class="btn btn-success btn-lg">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
        </button>
        </div>
    } else
    {
        <div id="btn-logout">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button class="btn btn-danger btn-lg">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Se déconnecter</a>
                </button>
            </form>
        </div>
    }
</div>
